<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <session-config>
        <session-timeout>
            30
        </session-timeout>
        <cookie-config>
            <http-only>true</http-only>
            <secure>true</secure>
        </cookie-config>
    </session-config>

    <servlet>
        <servlet-name>ConnServlet</servlet-name>
        <servlet-class>com.uts.iotbay.controller.ConnServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>ConnServlet</servlet-name>
        <url-pattern>/ConnServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>View-User</servlet-name>
        <servlet-class>com.uts.iotbay.controller.ViewUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>View-User</servlet-name>
        <url-pattern>/view-user</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>View-Users</servlet-name>
        <servlet-class>com.uts.iotbay.controller.ViewUsersServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>View-Users</servlet-name>
        <url-pattern>/view-users</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Delete-User</servlet-name>
        <servlet-class>com.uts.iotbay.controller.DeleteUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Delete-User</servlet-name>
        <url-pattern>/delete-user</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Edit-User</servlet-name>
        <servlet-class>com.uts.iotbay.controller.EditUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Edit-User</servlet-name>
        <url-pattern>/edit-user</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Add-User</servlet-name>
        <servlet-class>com.uts.iotbay.controller.AddUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Add-User</servlet-name>
        <url-pattern>/add-user</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Search-Users</servlet-name>
        <servlet-class>com.uts.iotbay.controller.SearchUsersServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Search-Users</servlet-name>
        <url-pattern>/search-users</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>com.uts.iotbay.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>Products</servlet-name>
        <servlet-class>com.uts.iotbay.controller.ViewProductsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Products</servlet-name>
        <url-pattern>/products</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>paymentCreate</servlet-name>
        <servlet-class>com.uts.iotbay.controller.PaymentCreateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>paymentCreate</servlet-name>
        <url-pattern>/paymentCreate</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ModifyProducts</servlet-name>
        <servlet-class>com.uts.iotbay.controller.ModifyProductsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ModifyProducts</servlet-name>
        <url-pattern>/staff/products</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ModifyProducts</servlet-name>
        <url-pattern>/staff/products/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ModifyProducts</servlet-name>
        <url-pattern>/staff/products/delete/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>com.uts.iotbay.controller.LogoutServlet</servlet-class>
     </servlet>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EditDetails</servlet-name>
        <servlet-class>com.uts.iotbay.controller.EditDetailsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditDetails</servlet-name>
        <url-pattern>/editdetails</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>com.uts.iotbay.controller.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AccessLogs</servlet-name>
        <servlet-class>com.uts.iotbay.controller.AccessLogsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AccessLogs</servlet-name>
        <url-pattern>/accesslogs</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>homedirect.jsp</welcome-file>
    </welcome-file-list>
</web-app>
